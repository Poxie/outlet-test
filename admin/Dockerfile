FROM node:latest

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

ARG NEXT_PUBLIC_API_ENDPOINT
ARG NEXT_PUBLIC_PEXELS_API_KEY
ARG NEXT_PUBLIC_BLOG_BANNER_URL

ENV NEXT_PUBLIC_API_ENDPOINT=$NEXT_PUBLIC_API_ENDPOINT
ENV NEXT_PUBLIC_PEXELS_API_KEY=$NEXT_PUBLIC_PEXELS_API_KEY
ENV NEXT_PUBLIC_BLOG_BANNER_URL=$NEXT_PUBLIC_BLOG_BANNER_URL

RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]