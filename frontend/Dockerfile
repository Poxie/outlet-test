FROM node:latest

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

ARG NEXT_PUBLIC_API_ENDPOINT
ARG GOOGLE_MAPS_BASE_URL
ARG GOOGLE_MAPS_API_KEY
ARG GOOGLE_MAPS_API_BASE_URL

ENV NEXT_PUBLIC_API_ENDPOINT=$NEXT_PUBLIC_API_ENDPOINT
ENV GOOGLE_MAPS_API_BASE_URL=$GOOGLE_MAPS_API_BASE_URL
ENV GOOGLE_MAPS_BASE_URL=$GOOGLE_MAPS_BASE_URL
ENV GOOGLE_MAPS_API_KEY=$GOOGLE_MAPS_API_KEY

RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]