generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMINISTRATOR
  PERSONNEL
}

enum GroupType {
  PRODUCT_GROUP
  WEEKLY_PRODUCT
}

model User {
  id        String @id
  name      String
  email     String @unique
  password  String
  role      Role   @default(PERSONNEL)
  createdAt String
}

model Category {
  id          String @id
  title       String
  description String
  bannerURL   String
  createdAt   String
}

model ProductGroup {
  id           String    @id
  name         String
  description  String
  bannerURL    String
  parentId     String?
  createdAt    String
  productCount Int
  products     Product[] // Relation to Product
  groupType    GroupType @default(PRODUCT_GROUP)
}

model Product {
  id           String       @id
  imageURL     String
  parentId     String
  position     Int
  productGroup ProductGroup @relation(fields: [parentId], references: [id])
}

model WeeklyProduct {
  id       String @id
  imageURL String
  date     String
}

model Store {
  id                String @id
  name              String
  address           String
  email             String
  phoneNumber       String
  createdAt         String
  instagramURL      String
  weekdayOpenHours  String
  saturdayOpenHours String
  sundayOpenHours   String
}
